<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dorado.doradoquiz1.page2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lollipop"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lollipop"
        android:textSize="25dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="version 5.0 - 5.1.1"
        android:textSize="25dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="API 21 - 22"
        android:textSize="25dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Released November 12, 2014"
        android:textSize="25dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Home"
        android:onClick="pageHome2"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnHome"
        android:layout_marginLeft="12dp"
        android:onClick="pageOne2"
        android:layout_marginStart="12dp"
        android:layout_toRightOf="@+id/btnHome"
        android:text="1"
        android:layout_alignTop="@+id/btnHome" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn1"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="14dp"
        android:layout_toRightOf="@+id/btn1"
        android:text="2"
        android:layout_alignBottom="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="50dp"
        android:onClick="pageThree2"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn2"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toRightOf="@+id/btn2"
        android:text="3"
        android:layout_alignBottom="@+id/btn2" />

</RelativeLayout>
