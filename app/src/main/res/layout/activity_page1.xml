<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dorado.doradoquiz1.page1">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/kitkat"
            android:layout_marginTop="37dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitkat"
        android:textSize="25dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="version 4.4 - 4.4.4"
        android:textSize="25dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="API 19 - 20"
        android:textSize="25dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Released October 31, 2013"
        android:textSize="25dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Home"
        android:onClick="pageHome1"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="35dp"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnHome"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toRightOf="@+id/btnHome"
        android:text="1"
        android:layout_alignTop="@+id/btnHome" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="50dp"
        android:onClick="pageTwo1"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn1"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="14dp"
        android:layout_toRightOf="@+id/btn1"
        android:text="2"
        android:layout_alignBottom="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="50dp"
        android:onClick="pageThree1"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn2"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toRightOf="@+id/btn2"
        android:text="3"
        android:layout_alignBottom="@+id/btn2" />
</RelativeLayout>

